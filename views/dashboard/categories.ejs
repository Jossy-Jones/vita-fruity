<!DOCTYPE html>
<html>
<head>
    <% include includes/metaMain %>
</head>
<body>


<!-- header starts here -->
<% include includes/header %>
<!-- header ends here -->


             <div align="center"><h2>Products</h2></div>
            <!-- cards view for products  -->
        <div id="card_content">
            <div class="card">
                <div class="card-body">

                    <div>
                         <button type="button" class="btn btn-outline-warning waves-effect" onclick="window.location.href='<%= site.adminURL%>/add-category'">Add category</button>
                    </div>

                    <table class="table table-hover">
                        <thead>
                            <!-- <th scope="col">NO</th> -->
                            <th scope="col">Category name</th>
                            <th scope="col">Last updated</th>
                            <th scope="col"><!-- Action --></th>
                        </thead>
                        <tbody>
                            <% if (categories.length > 0) { %>
                                
                                <% categories.forEach((category)=> { %>
                                    <tr>
                                        <!-- <th scope="row">1</th> -->
                                        <td><h4><%= category.name %> </h4></td>

                                        <td>
                                            <% if (category.time_updated) { %>
                                               <%=helpers.formatTime(category.time_updated, "D MMM Y")%>
                                            <% } else { %>
                                               
                                            <% } %>
                                            
                                        </td>

                                      <td><button type="button" onclick="window.location.href='<%= site.adminURL%>/edit-category/<%= category.id %>'" class="btn btn-info">Edit</button></td>
                                      <td><button type="button" onclick="deleteCategory(<%= category.id %>)'" class="btn btn-danger">Delete</button></td>
                                    </tr>

                                <% })  %>    

                            <% } else if(categories.length == 0) {%>
                                <div><h3>No categories yet</h3></div>
                            <% } %> 
                                
                     
                            
                        </tbody>
                    </table>    
                </div>
            </div>

            
<!-- footer starts here -->
<% include includes/footer %>
<!-- footer ends here -->

</body>
</html>